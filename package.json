{
  "name": "mercury-app",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "build:check": "npm run typecheck && vite build",
    "build:fast": "vite build",
    "build:production": "npm run clean && npm run typecheck && npm run lint && npm run test:run && vite build",
    "build:pwa": "VITE_PWA_DISABLED=false npm run build",
    "build:no-pwa": "VITE_PWA_DISABLED=true npm run build",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "typecheck:strict": "tsc --noEmit",
    "preview": "vite preview --host",
    "test": "vitest --config vitest.config.ts",
    "test:run": "vitest run --config vitest.config.ts",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "test:coverage": "vitest --coverage --config vitest.config.ts",
    "test:auth": "vitest run --config=vitest.config.auth.ts --reporter=verbose",
    "test:components": "vitest run tests/components --reporter=verbose",
    "test:pwa": "vitest run tests/pwa --reporter=verbose",
    "test:hooks": "vitest run tests/hooks --exclude='**/useAuth.test.tsx' --reporter=verbose",
    "test:all": "npm run test:auth && npm run test:components && npm run test:pwa && npm run test:hooks",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run typecheck && npm run lint && npm run format:check",
    "check:full": "npm run typecheck:strict && npm run lint && npm run test:run",
    "clean": "rm -rf dist/ .vite/",
    "clean:full": "rm -rf dist/ .vite/ node_modules/.vite/ node_modules/.cache/",
    "fresh-install": "npm run clean:full && rm -rf node_modules package-lock.json && npm install",
    "pwa:disable": "echo 'VITE_PWA_DISABLED=true' > .env.local",
    "pwa:enable": "echo 'VITE_PWA_DISABLED=false' > .env.local",
    "debug:build": "DEBUG=vite:* npm run build:fast",
    "analyze": "npm run build:fast && npx vite-bundle-analyzer dist",
    "generate-icons": "chmod +x generate-icons.sh && ./generate-icons.sh",
    "convert-favicon": "npx tsx scripts/convert-favicon.ts",
    "ci:typecheck": "tsc --noEmit",
    "ci:lint": "eslint . --ext ts,tsx --max-warnings 0",
    "ci:test": "vitest run --coverage",
    "ci:build": "vite build",
    "ci:all": "npm run ci:typecheck && npm run ci:lint && npm run ci:test && npm run ci:build",
    "build:clean": "rm -rf dist/ .vite/ && npm run build",
    "deploy:safe": "npm run build:no-pwa",
    "deploy:pwa": "npm run build:pwa"
  },
  "dependencies": {
    "@faker-js/faker": "^9.6.0",
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@sentry/react": "^9.33.0",
    "@supabase/supabase-js": "^2.52.0",
    "@t3-oss/env-core": "^0.12.0",
    "@tanstack/match-sorter-utils": "^8.19.4",
    "@tanstack/react-form": "^1.0.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.66.5",
    "@tanstack/react-router": "^1.121.2",
    "@tanstack/react-router-devtools": "^1.121.2",
    "@tanstack/react-store": "^0.7.0",
    "@tanstack/react-table": "^8.21.2",
    "@tanstack/router-plugin": "^1.121.2",
    "@tanstack/router-vite-plugin": "^1.124.0",
    "@tanstack/store": "^0.7.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.0.11",
    "dompurify": "^3.2.6",
    "lucide-react": "^0.476.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "^7.60.0",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@jridgewell/sourcemap-codec": "^1.5.0",
    "@resvg/resvg-js": "^2.6.2",
    "@tanstack/eslint-config": "^0.1.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^24.0.8",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "jsdom": "^26.0.0",
    "msw": "^2.10.3",
    "png-to-ico": "^2.1.8",
    "postcss": "^8.5.6",
    "prettier": "^3.5.3",
    "pwa-asset-generator": "^8.0.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "uuid": "^11.1.0",
    "vite": "^6.1.0",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^3.0.5",
    "web-vitals": "^4.2.4"
  },
  "overrides": {
    "@tanstack/react-router": "^1.121.2",
    "glob": "^10.4.5",
    "rimraf": "^5.0.10",
    "magic-string": "^0.30.12"
  }
}
